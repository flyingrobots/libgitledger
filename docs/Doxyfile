#######################################################################
# Doxyfile for libgitledger API documentation (Issue #51)
#
# This configuration is intentionally minimal and build-system friendly.
# We generate into the CMake binary tree by default.
#######################################################################

# Project
PROJECT_NAME           = "libgitledger"
PROJECT_BRIEF          = "Git-native ledger library (C)"
OUTPUT_DIRECTORY       = @CMAKE_BINARY_DIR@/docs/api
CREATE_SUBDIRS         = YES
FULL_PATH_NAMES        = NO

# Input
INPUT                  = @CMAKE_SOURCE_DIR@/include \
                         @CMAKE_SOURCE_DIR@/libgitledger/include \
                         @CMAKE_SOURCE_DIR@/README.md \
                         @CMAKE_SOURCE_DIR@/docs/SPEC.md
FILE_PATTERNS          = *.h *.c *.md
RECURSIVE              = YES
EXCLUDE_PATTERNS       = */tests/* */external/* */build*/**

# Parsing
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = NO
EXTRACT_LOCAL_CLASSES  = NO
HIDE_UNDOC_MEMBERS     = NO
HIDE_UNDOC_CLASSES     = NO
INLINE_SOURCES         = NO
JAVADOC_AUTOBRIEF      = YES
OPTIMIZE_OUTPUT_FOR_C  = YES
MACRO_EXPANSION        = NO
ENABLE_PREPROCESSING   = YES
EXPAND_AS_DEFINED      =

# Warnings
WARNINGS               = YES
WARN_IF_UNDOCUMENTED   = NO
WARN_IF_DOC_ERROR      = YES
WARN_NO_PARAMDOC       = NO
QUIET                  = YES

# Output formats
GENERATE_HTML          = YES
HTML_OUTPUT            = html
GENERATE_LATEX         = NO
GENERATE_XML           = YES
XML_OUTPUT             = xml

# Source listings
SOURCE_BROWSER         = NO
VERBATIM_HEADERS       = YES

# Dot tools
HAVE_DOT               = NO
